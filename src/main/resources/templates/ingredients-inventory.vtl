<div class="container bg-grayLighter">
  <div class="padding40 no-padding-bottom">

    <div class="tile-container">

      <a class="tile bg-cobalt bg-active-darkCobalt fg-white margin20 padding10" href="/manager/delivery">
        <div class="tile-content iconic">
          <span class="icon mif-truck"></span>
        </div>
        <span class="tile-label">New Delivery</span>
      </a>

      <a class="tile bg-indigo bg-active-darkIndigo fg-white margin20 padding10" href="/manager/new-ingredient">
        <div class="tile-content iconic">
          <span class="icon mif-clipboard"></span>
        </div>
        <span class="tile-label">New Ingredient</span>
      </a>

      <a class="tile bg-indigo bg-active-darkIndigo fg-white margin20 padding10" href="/manager/new-dish">
        <div class="tile-content iconic">
          <span class="icon mif-plus"></span>
        </div>
        <span class="tile-label">New Menu Item</span>
      </a>

    </div>

    #if ($eightysixes.size() == 0)
      <div class="login-form padding20 block-shadow margin20 no-margin-left no-margin-right" style="opacity: 1; transform: scale(1); transition: 0.5s;">
        <div class="tile-container">
          <a class="tile-wide bg-lightGreen bg-active-Green fg-white margin20 padding10" href="/manager/dishes">
            <div class="tile-content iconic">
              <span class="icon mif-thumbs-up"></span>
            </div>
            <span class="tile-label">All Dishes Available</span>
          </a>
        </div>
      </div>
    #else

      <div class="login-form padding20 block-shadow margin20 no-margin-left no-margin-right" style="opacity: 1; transform: scale(1); transition: 0.5s;">
        <h1 class="leader">86 List</h1>
        <hr>
        <div class="tile-container">
          #foreach ($dish in $dishes)
            #if ($eightysixes.contains($dish))
            <a class="tile bg-darkOrange bg-active-orange fg-white margin20 padding10" href="/manager/dishes/$dish.getId()">
              <div class="tile-content iconic">
                <span class="icon mif-not"></span>
              </div>
              <span class="tile-label">86 $dish.getName()</span>
            </a>
            #end
          #end
        </div>
      </div>
    #end

    <div class="login-form padding20 block-shadow" style="opacity: 1; transform: scale(1); transition: 0.5s;">

      <h1 class="leader">Ingredient Inventory</h1>
      <table class="table">
        <thead>
          <tr>
            <th>
              Ingredient
            </th>
            <th>
              Current Stock
            </th>
            <th>
              Desired Stock
            </th>
            <th>
              Lowest Expiration Date
            </th>
          </tr>
        </thead>
        <tbody>
          #foreach ($ingredient in $ingredients)
            <tr>
              #if ($ingredient.isLessThanOrEqualToTwentyPercent())
                <td class="fg-red">
                  <a href="/manager/ingredients/$ingredient.getId()" class="fg-red">$ingredient.getName()</a>
                </td>
                <td class="fg-red">
                  $ingredient.getTotalOnHand() $ingredient.getUnit()
                </td>
                <td class="fg-red">
                  $ingredient.getDesiredOnHand() $ingredient.getUnit()
                </td>
                <td class="fg-red">
                  $ingredient.getMostRecentExpiration()
                </td>
              #else
                <td>
                  <a href="/manager/ingredients/$ingredient.getId()">$ingredient.getName()</a>
                </td>
                <td>
                  $ingredient.getTotalOnHand() $ingredient.getUnit()
                </td>
                <td>
                  $ingredient.getDesiredOnHand() $ingredient.getUnit()
                </td>
                <td>
                  $ingredient.getMostRecentExpiration()
                </td>
              #end
            </tr>
          #end
        </tbody>
      </table>
    </div>
  </div>
</div>
