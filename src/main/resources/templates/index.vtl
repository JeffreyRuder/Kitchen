<h1>Style Tracker</h1>
<div class="row">
  <div class="col-md-8 fast-facts">
    <h2>Stylist Data</h2>
    <p><strong>Current Stylists: </strong>$stylist.total()</p>
    <p><strong>Current Clients: </strong>$client.total()</p>
    #if ($stylist.total() > 0)
      <p><strong>Current Client:Stylist Ratio: </strong>$stylist.ratio()</p>
    #end
  </div>

  <div class="col-md-4 add-box">
    <h2>Add New Stylist</h2>
    <form class="form add-form" action="/" method="post">
      <div class="form-group">
        <input name="firstname" type="text" class="form-control" id="firstname" required placeholder="First Name">
      </div>
      <div class="form-group">
        <input name="lastname" type="text" class="form-control" id="lastname" required placeholder="Last Name">
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block">Add New Stylist</button>
      </div>
    </form>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h2>Current Stylists</h2>
    <div class="table-responsive">
      <table class="table">
        <caption>SELECT A STYLIST TO ADD CLIENTS</caption>
        <thead>
          <th>Stylist Name</th>
          <th>Number of Clients</th>
        </thead>
        <tbody>
          #foreach ($person in $stylists)
            <tr>
              <td><a href="/stylists/$stylist.getId()">$person.getLastName(), $person.getFirstName()</a></td>
              <td>$person.getNumberOfClients()</td>
            </tr>
          #end
        </tbody>
      </table>
    </div>
  </div>
</div>
